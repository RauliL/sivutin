{
  "name": "sivutin",
  "version": "1.0.0",
  "description": "Simple paginator",
  "keywords": ["pagination"],
  "main": "./dist/index.js",
  "main:src": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "author": "Rauli Laine <rauli.laine@iki.fi>",
  "homepage": "https://github.com/RauliL/sivutin",
  "bugs": {
    "url": "https://github.com/RauliL/sivutin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RauliL/sivutin"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/*.ts",
      "!src/index.ts",
      "!src/types.ts",
      "!src/*.test.ts"
    ]
  },
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf './dist'",
    "test": "jest",
    "prebuild": "npm run clean",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "jest": "^27.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  }
}
